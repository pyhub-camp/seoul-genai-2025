{
  "openapi": "3.1.1",
  "info": {
    "title": "OpenLaw Edge Function API",
    "version": "1.0.0",
    "description": "Supabase Edge Function wrapping OpenLaw DRF APIs. GET-only, anonymous access. For GPTs Actions integration."
  },
  "servers": [
    {
      "url": "https://mzkifizhpoiksksftyoh.functions.supabase.co",
      "description": "Supabase Functions (production)"
    }
  ],
  "paths": {
    "/api_openlaw": {
      "get": {
        "operationId": "getApiOpenlaw",
        "summary": "OpenLaw API proxy (GET)",
        "description": "Provides law search, law detail (stored to Storage and returns a signed URL), and admrul search via `action` query parameter.",
        "tags": [
          "openlaw"
        ],
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": true,
            "description": "Action to perform. One of: law.search, law.detail, admrul.search",
            "schema": {
              "type": "string",
              "enum": [
                "law.search",
                "law.detail",
                "admrul.search"
              ]
            }
          },
          {
            "name": "query",
            "in": "query",
            "required": false,
            "description": "Search keyword. Required for *.search actions.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "idOrMst",
            "in": "query",
            "required": false,
            "description": "Law ID or MST. Required for law.detail.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "display",
            "in": "query",
            "required": false,
            "description": "Items per page for search results.",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number for search results.",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/SearchResult"
                    },
                    {
                      "$ref": "#/components/schemas/StorageUrlResponse"
                    }
                  ]
                },
                "examples": {
                  "law.search": {
                    "summary": "Law search example",
                    "value": {
                      "LawSearch": {
                        "totalCnt": 1,
                        "law": [
                          {
                            "법령명한글": "예시 법령",
                            "법령ID": "011349"
                          }
                        ]
                      }
                    }
                  },
                  "law.detail": {
                    "summary": "Law detail uses signed URL",
                    "value": {
                      "url": "https://mzkifizhpoiksksftyoh.supabase.co/storage/v1/object/sign/caches-bucket/law_detail/abc123.json?token=..."
                    }
                  },
                  "admrul.search": {
                    "summary": "Administrative rule search example",
                    "value": {
                      "AdmrulSearch": {
                        "totalCnt": 2,
                        "admrul": [
                          {
                            "행정규칙명": "예시 규칙"
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (missing or invalid parameters)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "query 파라미터가 필요합니다."
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "요청 처리 중 오류가 발생했습니다.",
                  "message": "..."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "StorageUrlResponse": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "url"
        ]
      },
      "SearchResult": {
        "type": "object",
        "description": "OpenLaw search JSON. The structure is controlled by the upstream API and may vary.",
        "properties": {},
        "additionalProperties": true
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        },
        "required": [
          "error"
        ]
      }
    }
  }
}
